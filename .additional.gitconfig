[merge]
	tool = nvim
[mergetool]
	prompt = false
[mergetool "nvim"]
	cmd = nvim -f -d $MERGED $LOCAL $BASE $REMOTE -c 'wincmd K'
[difftool "nvim"]
	cmd = nvim -d $LOCAL $REMOTE
[alias]
	get = fetch -p --recurse-submodules
[init]
	defaultBranch = master
[fetch]
	prune = true
[diff]
	algorithm = histogram
	colorMoved = dimmed-zebra
[rebase]
	autoStash = true
[pull]
	ff = only
